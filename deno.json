{
	"tasks": {
		"start": "deno run -A --no-check --unstable --watch=routes/,components/,static/ ./dev.js",
		"generate": "deno run -A --unstable ./generate.js",
		"fix-svg": "deno run -A --unstable ./fix-svg.js"
	},
	"importMap": "./import-map.json",
	"lint": {
		"rules": {
			"exclude": [
				"require-await"
			]
		}
	},
	"compilerOptions": {
		"jsx": "react-jsx",
		"jsxImportSource": "preact"
	}
}